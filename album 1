    <script>
        const CONFIG = {
            email: 'biasattig@libero.it',
            totalPhotos: 40,
            photosPerRow: 4
        };

        let currentPhotoIndex = 0;
        const photoUrls = [];

        // Genera array di foto da Unsplash
        function generatePhotoUrls() {
            const baseUrl = 'https://images.unsplash.com/photo-';
            const photoIds = [
                '1506905925346-21bda4d32df4',
                '1469474968028-56623f02e42e',
                '1472214103451-9374bd1c798e',
                '1507525428034-b723cf961d3e',
                '1475924156734-496f6cac6ec1',
                '1426604966848-d7adac402bff',
                '1464822759023-fed622ff2c3b',
                '1470071459604-3b5ec3a7fe05',
                '1447752875215-b2761acb3c5d',
                '1501785888041-af3ef285b470',
                '1533156452874-3c3d5fa63e46',
                '1506905925346-21bda4d32df4',
                '1469474968028-56623f02e42e',
                '1472214103451-9374bd1c798e',
                '1507525428034-b723cf961d3e',
                '1475924156734-496f6cac6ec1',
                '1426604966848-d7adac402bff',
                '1464822759023-fed622ff2c3b',
                '1470071459604-3b5ec3a7fe05',
                '1447752875215-b2761acb3c5d',
                '1501785888041-af3ef285b470',
                '1533156452874-3c3d5fa63e46',
                '1506905925346-21bda4d32df4',
                '1469474968028-56623f02e42e',
                '1472214103451-9374bd1c798e',
                '1507525428034-b723cf961d3e',
                '1475924156734-496f6cac6ec1',
                '1426604966848-d7adac402bff',
                '1464822759023-fed622ff2c3b',
                '1470071459604-3b5ec3a7fe05',
                '1447752875215-b2761acb3c5d',
                '1501785888041-af3ef285b470',
                '1533156452874-3c3d5fa63e46',
                '1506905925346-21bda4d32df4',
                '1469474968028-56623f02e42e',
                '1472214103451-9374bd1c798e',
                '1507525428034-b723cf961d3e',
                '1475924156734-496f6cac6ec1',
                '1426604966848-d7adac402bff',
                '1464822759023-fed622ff2c3b'
            ];

            photoIds.forEach((id, index) => {
                photoUrls.push(`${baseUrl}${id}?w=400&q=80&fm=jpg`);
            });
        }

        // Inizializza la griglia
        function initGallery() {
            generatePhotoUrls();
            const photoGrid = document.getElementById('photoGrid');
            document.getElementById('totalPhotos').textContent = CONFIG.totalPhotos;

            photoUrls.forEach((url, index) => {
                const card = document.createElement('div');
                card.className = 'photo-card';
                card.innerHTML = `
                    <img src="${url}" alt="Foto ${index + 1}" loading="lazy">
                    <div class="photo-overlay">
                        <span class="photo-overlay-text">Visualizza</span>
                    </div>
                `;
                card.addEventListener('click', () => openLightbox(index));
                photoGrid.appendChild(card);
            });
        }

        // Apri lightbox
        function openLightbox(index) {
            currentPhotoIndex = index;
            const lightbox = document.getElementById('lightbox');
            const lightboxImage = document.getElementById('lightboxImage');
            const currentIndex = document.getElementById('currentPhotoIndex');

            lightboxImage.src = photoUrls[index];
            currentIndex.textContent = index + 1;
            lightbox.classList.add('active');
            document.body.style.overflow = 'hidden';
        }

        // Chiudi lightbox
        function closeLightbox() {
            const lightbox = document.getElementById('lightbox');
            lightbox.classList.remove('active');
            document.body.style.overflow = 'auto';
        }

        // Foto precedente
        function prevPhoto() {
            currentPhotoIndex = (currentPhotoIndex - 1 + photoUrls.length) % photoUrls.length;
            updateLightbox();
        }

        // Foto successiva
        function nextPhoto() {
            currentPhotoIndex = (currentPhotoIndex + 1) % photoUrls.length;
            updateLightbox();
        }

        // Aggiorna lightbox
        function updateLightbox() {
            const lightboxImage = document.getElementById('lightboxImage');
            const currentIndex = document.getElementById('currentPhotoIndex');

            lightboxImage.src = photoUrls[currentPhotoIndex];
            currentIndex.textContent = currentPhotoIndex + 1;
        }

        // Navigazione da tastiera
        document.addEventListener('keydown', (e) => {
            const lightbox = document.getElementById('lightbox');
            if (!lightbox.classList.contains('active')) return;

            if (e.key === 'ArrowLeft') prevPhoto();
            if (e.key === 'ArrowRight') nextPhoto();
            if (e.key === 'Escape') closeLightbox();
        });

        // Copia email
        function handleEmailCopy(e) {
            e.preventDefault();
            navigator.clipboard.writeText(CONFIG.email)
                .then(() => console.log('Email copiata:', CONFIG.email))
                .catch(() => emailCopyFallback());
        }

        function emailCopyFallback() {
            const textarea = document.createElement('textarea');
            textarea.value = CONFIG.email;
            textarea.style.position = 'fixed';
            textarea.style.left = '-999999px';
            document.body.appendChild(textarea);
            textarea.select();
            
            try {
                document.execCommand('copy');
                console.log('Email copiata:', CONFIG.email);
            } catch (err) {
                console.error('Errore copia email:', err);
            } finally {
                document.body.removeChild(textarea);
            }
        }

        // Avvia
        initGallery();
    </script>
</body>
</html>
